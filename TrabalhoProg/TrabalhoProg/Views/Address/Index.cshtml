@model List<TrabalhoProg.Modelo.Address>
@{
    ViewData["Title"] = "Pagina principal";
}

<a asp-action="Create" asp-controller="Address" class="btn btn-light">
    Novo Endereco
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>País</th>
                <th>Estado</th>
                <th>Cidade</th>
                <th>Rua</th>
                <th>Rua1</th>
                <th>Código Postal</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.AddressId</td>
                    <td>@address.Country</td>
                    <td>@address.State</td>
                    <td>@address.City</td>
                    <td>@address.Street</td>
                    <td>@address.Street1</td>
                    <td>@address.PostalCode</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Address" asp-route-id="@address.AddressId" title="Excluir">
                            🗑
                        </a>
                        <a asp-action="Update" asp-controller="Address" asp-route-id="@address.AddressId" title="Editar">
                            ✏
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Não existem registros de Endereco</div>
}

<a asp-action="ExportDelimitedFile" asp-controller="Address" class="btn btn-light">
    Exportar Delimitado
</a>
<a asp-action="ExportFixedFile" asp-controller="Address" class="btn btn-light">
    Exportar Fixo
</a>

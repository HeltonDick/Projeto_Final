@model List<TrabalhoProg.Modelo.Address>

    @{
    ViewData["Title"] = "Pagina Principal";
    }

    <a asp-action="Create" asp-controller="Address" class="btn btn-light">
        Novo Endereco
    </a>
    <a asp-action="Delete" asp-controller="Address" class="btn btn-danger">
        Deletar Endereco
    </a>

    @if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">País</th>
                <th scope="col">Estado</th>
                <th scope="col">Cidade</th>
                <th scope="col">Rua</th>
                <th scope="col">Rua1</th>
                <th scope="col">Código Postal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TrabalhoProg.Modelo.Address address in Model)
            {
            <tr>
                <td>@address.AddressId</td>
                <td>@address.Country</td>
                <td>@address.State</td>
                <td>@address.City</td>
                <td>@address.Street</td>
                <td>@address.Street1</td>
                <td>@address.PostalCode</td>

                <td>
                    <a asp-action="Delete" asp-controller="Address" asp-route-id="@address.AddressId" title="Excluir Endereco @address.PostalCode">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Endereco
    </div>
}

    <a asp-action="ExportDelimitatedFile" asp-controller="Address" class="btn btn-light">
        Exportar Delimitado
    </a>

    <a asp-action="ExportFixedFile" asp-controller="Address" class="btn btn-light">
        Exportar Fixo
    </a>

@model TrabalhoProg.Modelo.Address

@{
    ViewData["Title"] = "Criar um novo endereco";
}

<div class="text-center">
    <h1>Cadastro de Endereco</h1>

    <div class="container">

        <form id="formAddress" method="post" asp-action="Create" asp-controller="Address">
            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.Country">País:</label>
                    <input type="text" class="form-control" asp-for="@Model.Country" />
                    <label asp-for="@Model.State">Estado:</label>
                    <input type="text" class="form-control" asp-for="@Model.State" />
                    <label asp-for="@Model.City">Cidade:</label>
                    <input type="text" class="form-control" asp-for="@Model.City" />
                    <label asp-for="@Model.Street">Rua:</label>
                    <input type="text" class="form-control" asp-for="@Model.Street" />
                    <label asp-for="@Model.Street1">Rua1:</label>
                    <input type="text" class="form-control" asp-for="@Model.Street1" />
                    <label asp-for="@Model.PostalCode">CodigoPostal:</label>
                    <input type="text" class="form-control" asp-for="@Model.PostalCode" />
                </div>
            </div>

            <button id="btnAddress" type="submit" class="btn btn-primary" value="Cadastrar">
                Cadastrar
            </button>

            <a asp-action="Index" class="btn btn-danger" asp-controller="Address">
                Voltar
            </a>
        </form>
    </div>
</div>
@model List<TrabalhoProg.Modelo.Customer>

@{
    ViewData["Title"] = "Pagina principal";
}


<a asp-action="Create" asp-controller="Customer" class="btn btn-light">
    Novo Customer
</a>
<a asp-action="Delete" asp-controller="Customer" class="btn btn-danger">
    Deletar Customer
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TrabalhoProg.Modelo.Customer customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>

                    <td>
                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.CustomerId" title="Excluir Customer @customer.Name">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Customer
    </div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Customer" class="btn btn-light">
    Exportar Delimitado
</a>

<a asp-action="ExportFixedFile" asp-controller="Customer" class="btn btn-light">
    Exportar Fixo
</a>

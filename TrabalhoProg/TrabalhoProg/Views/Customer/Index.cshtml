@model List<TrabalhoProg.Modelo.Customer>

@{
    ViewData["Title"] = "Pagina principal";
}

<a asp-action="Create" asp-controller="Customer" class="btn btn-light">Novo Customer</a>

@if (Model.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a asp-action="Update" asp-controller="Customer" asp-route-id="@customer.CustomerId" title="Editar">
                            ✏️
                        </a>
                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.CustomerId" title="Excluir">
                            🗑️
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Não existem registros de Customer</div>
}

<a asp-action="ExportDelimitedFile" asp-controller="Customer" class="btn btn-light">Exportar Delimitado</a>
<a asp-action="ExportFixedFile" asp-controller="Customer" class="btn btn-light">Exportar Fixo</a>

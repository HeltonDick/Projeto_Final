@model TrabalhoProg.Modelo.Customer;
@{
    ViewData["Title"] = "Deletar uma categoria";
}

<div class="container">

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">País</th>
                <th scope="col">Estado</th>
                <th scope="col">Cidade</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CustomerId</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
                <td>@Model.Address?.Country</td>
                <td>@Model.Address?.State</td>
                <td>@Model.Address?.City</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="ConfirmDelete" asp-controller="Customer">
                <input type="hidden" name="id" value="@Model.CustomerId" />

                <button class="btn btn-primary">
                    Excluir
                </button>

                <a asp-action="Index" class="btn btn-danger" asp-controller="Customer">
                    Voltar
                </a>
            </form>
        </div>
    </div>
</div>
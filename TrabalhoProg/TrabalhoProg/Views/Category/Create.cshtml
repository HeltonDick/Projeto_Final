@model TrabalhoProg.Modelo.Category;

@{
    ViewData["Title"] = "Criar uma nova categoria";
}

<div class="text-center">
    <h1>Cadastro de Categoria</h1>

    <div class="container">

        <form id="formCategory" method="post" asp-action="Create" asp-controller="Category">
            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.Name">Nome:</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                    <label asp-for="@Model.Description">Descrição:</label>
                    <input type="text" class="form-control" asp-for="@Model.Description" />
                </div>
            </div>

            <button id="btnCategory" type="submit" class="btn btn-primary" value="Cadastrar">
                Cadastrar
            </button>

            <a asp-action="Index" class="btn btn-danger" asp-controller="Category">
                Voltar
            </a>
        </form>
    </div>
</div>
@model List<TrabalhoProg.Modelo.Category>
@{
    ViewData["Title"] = "Página Principal";
}

<a asp-action="Create" asp-controller="Category" class="btn btn-light">Nova Categoria</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" title="Excluir">
                            🗑
                        </a>
                        <a asp-action="Update" asp-controller="Category" asp-route-id="@category.CategoryId" title="Editar">
                            ✏
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Não existem registros de Categoria</div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Category" class="btn btn-light">Exportar Delimitado</a>
<a asp-action="ExportFixedFile" asp-controller="Category" class="btn btn-light">Exportar Fixo</a>

@model TrabalhoProg.Modelo.Category;
@{
    ViewData["Title"] = "Deletar uma categoria";
}

<div class="container">

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CategoryId</td>
                <td>@Model.Name</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="ConfirmDelete" asp-controller="Category">
                <input type="hidden" name="id" value="@Model.CategoryId" />

                <button class="btn btn-primary">
                    Excluir
                </button>

                <a asp-action="Index" class="btn btn-danger" asp-controller="Category">
                    Voltar
                </a>
            </form>
        </div>
    </div>
</div>
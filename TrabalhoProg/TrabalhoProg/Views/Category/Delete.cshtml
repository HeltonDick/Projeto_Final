﻿@model Modelo.Category

@{
    ViewData["Title"] = "Deletar uma categoria";
}

<div class="container">

    <div class="row">
        <div class="col-6">Id:</div>
        <div class="col-6">@Model.CategoryId</div>
    </div>

    <div class="row">
        <div class="col-6">Nome:</div>
        <div class="col-6">@Model.Name</div>
    </div>

    <div class="row">
        <div class="col-6">Descrição:</div>
        <div class="col-6">@Model.Description</div>
    </div>

    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="ConfirmDelete" asp-controller="Category">
                <input type="hidden" name="id" value="@Model.CategoryId" />

                <button class="btn btn-primary">
                    Excluir
                </button>

                <a asp-action="Index" class="btn btn-danger" asp-controller="Category">
                    Voltar
                </a>
            </form>
        </div>
    </div>
</div>
﻿@model List<Modelo.Property>

    @{
    ViewData["Title"] = "Pagina Principal";
    }

    <a asp-action="Create" asp-controller="Property" class="btn btn-light">
        Nova Propriedade
    </a>
    <a asp-action="Delete" asp-controller="Property" class="btn btn-danger">
        Deletar Propriedade
    </a>

    @if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descricao</th>
                <th scope="col">Quartos</th>
                <th scope="col">Vagas</th>
                <th scope="col">Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Property property in Model)
            {
            <tr>
                <td>@property.PropertyId</td>
                <td>@property.Name</td>
                <td>@property.Description</td>
                <td>@property.BedRooms</td>
                <td>@property.GarageVacancies</td>
                <td>@property.CurrentPricePerNight</td>

                <td>
                    <a asp-action="Delete" asp-controller="Property" asp-route-id="@property.PropertyId" title="Excluir Endereco @property.Name">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Propriedades
    </div>
}

    <a asp-action="ExportDelimitatedFile" asp-controller="Property" class="btn btn-light">
        Exportar Delimitado
    </a>

    <a asp-action="ExportFixedFile" asp-controller="Property" class="btn btn-light">
        Exportar Fixo
    </a>

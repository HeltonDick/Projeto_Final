@model List<TrabalhoProg.Modelo.Property>;

    @{
    ViewData["Title"] = "Pagina Principal";
    }

    <a asp-action="Create" asp-controller="Property" class="btn btn-light">
        Nova Propriedade
    </a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descricao</th>
                <th scope="col">Quartos</th>
                <th scope="col">Vagas</th>
                <th scope="col">Preço</th>
                <th scope="col">Categoria</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TrabalhoProg.Modelo.Property property in Model)
            {
            <tr>
                <td>@property.PropertyId</td>
                <td>@property.Name</td>
                <td>@property.Description</td>
                <td>@property.BedRooms</td>
                <td>@property.GarageVacancies</td>
                <td>@property.CurrentPricePerNight</td>
                <td>@property.Category?.Name</td>
                <td>
                    <a asp-action="Update" asp-controller="Property" asp-route-id="@property.PropertyId" title="Editar">
                        ✏️
                    </a>
                    <a asp-action="Delete" asp-controller="Property" asp-route-id="@property.PropertyId" title="Excluir">
                        🗑️
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Propriedades
    </div>
}

    <a asp-action="ExportDelimitedFile" asp-controller="Property" class="btn btn-light">
        Exportar Delimitado
    </a>

    <a asp-action="ExportFixedFile" asp-controller="Property" class="btn btn-light">
        Exportar Fixo
    </a>
